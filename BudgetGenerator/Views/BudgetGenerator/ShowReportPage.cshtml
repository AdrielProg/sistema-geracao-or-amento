@model BudgetGenerator.Models.ReportInputModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/generator.css">
    <title>Document</title>
</head>

<body>
    <main class="main-container">
        <div class="report-container">
            <form asp-action="GenerateReport" method="post" id="formRelatorio">
                <h2>Cadastro de Relatório</h2>
                <div>
                    <label for="tituloRelatorio">Título do Relatório:</label>
                    <input type="text" id="tituloRelatorio" name="ReportTitle" required />
                </div>


                <div id="funcionalidadesContainer">

                </div>

                <button type="button" id="addFuncionalidadeBtn">Adicionar Funcionalidade</button>
                <button type="submit" id="generateReportBtn">Gerar Relatório PDF</button>
            </form>
        </div>
    </main>
</body>
<script src="~/js/budgetGenerator.js"></script>

</html>
