@model BudgetGenerator.Models.ReportInputModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/generator.css">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <main class="main-container">
        <form asp-action="GenerateReport" method="post" id="formReport">
            <div class="report-container">
                <h1>Budget Generator</h1>
                <div class="title-hours-container">
                    <div class="title-container">
                        <label asp-for="ReportTitle" for="reportTitle">Título do Relatório:</label>
                        <input asp-for="ReportTitle" type="text" id="reportTitle" name="ReportTitle" data-val="true"
                            data-val-required="O título é obrigatório." autocomplete="off" />
                    </div>
                    <div class="error-mesage-section">
                        <span asp-validation-for="ReportTitle" class="error-message"></span>
                    </div>
                    <div class="hours-container">
                        <label asp-for="AnalysisHours" for="analysisHours">Horas de Analise:</label>
                        <input asp-for="AnalysisHours" type="number" id="analysisHours" name="analysisHours" min="1"
                            autocomplete="off" />
                    </div>
                    <div class="error-mesage-section">
                        <span asp-validation-for="AnalysisHours" class="error-message"></span>
                    </div>
                </div>
                <div id="feature-container"></div>
                <input type="hidden" id="formatInput" name="format" value="pdf" />
            </div>
            <div class="button-container">
                <div>
                    <button type="button" id="resetButton">Resetar Formulário</button>
                    <button type="button" id="addFeatureBtn">Adicionar Funcionalidade</button>
                </div>
                <div>
                    <button type="submit" id="generatePdfButton"
                        onclick="document.getElementById('formatInput').value = 'pdf';">Exportar PDF</button>
                    <button type="submit" id="generateDocxButton"
                        onclick="document.getElementById('formatInput').value = 'docx';">Gerar DOCX</button>
                </div>
            </div>
        </form>
    </main>
</body>
<script src="~/js/budgetGenerator.js"></script>

</html>
