@model BudgetGenerator.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div id="page" class="flex">
        <div class="login-container">
            <header class="flex">
                <img src="~/images/locotipoSMN.oficial.png" alt="Logotipo SMN" />
            </header>
            <main class="flex">
                <div class="head-form">
                    <h1>Gerador de Or√ßamento</h1>
                </div>
                <form asp-action="Authenticate" method="post">
                    <div class="input-element">
                        <div class="label-element">
                            <label for="email">E-mail</label>
                        </div>
                        <input asp-for="Username" type="text" id="username" required />
                    </div>
                    <div class="input-element flex">
                        <div class="label-element flex">
                            <label for="password">Senha</label>
                            <a href="#">Esqueceu a senha?</a>
                        </div>
                        <input asp-for="Password" type="password" id="password" required />
                    </div>
                    <div class="button-container flex">
                        <button class="flex" type="submit">Entrar</button>
                    </div>



                </form>
                <div id="error-message" class="flex">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <p>Username ou senha incorretos.</p>
                    }
                </div>
            </main>
        </div>
    </div>
    <script src="~/js/login.js"></script>
</body>

</html>